---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import BriefcaseIcon from "../../components/icons/Briefcase.astro";
import FileCodeIcon from "../../components/icons/FileCode.astro";
import CertificateIcon from "../../components/icons/Certificate.astro";
import Experience from "../../components/Experience.astro";
import SectionContainer from "../../components/SectionContainer.astro";
import Title from "../../components/Title.astro";
import Projects from "../../components/Projects.astro";
import Certificates from "../../components/Certificates.astro";
import AboutMe from "../../components/AboutMe.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout title={t("site.title")} description={t("site.description")}>
  <main class="px-4">
    <SectionContainer
      id="inicio"
      class="pt-28 pb-16 sm:py-28 flex flex-col sm:flex-row items-center gap-5"
    >
      <Hero />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <Title>
        <BriefcaseIcon class="size-6" /> Experiencia laboral
      </Title>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <Title>
        <FileCodeIcon class="size-6" /> Proyectos
      </Title>
      <Projects />
    </SectionContainer>

    <SectionContainer id="certificaciones">
      <Title>
        <CertificateIcon class="size-6" /> Certificaciones
      </Title>
      <Certificates />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <Title>
        <CertificateIcon class="size-6" /> Sobre m√≠
      </Title>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
