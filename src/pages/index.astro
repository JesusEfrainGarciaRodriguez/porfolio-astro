---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import BriefcaseIcon from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import CertificateIcon from "../components/icons/Certificate.astro";
import MeIcon from "../components/icons/Me.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Title from "../components/Title.astro";
import Projects from "../components/Projects.astro";
import Certificates from "../components/Certificates.astro";
import AboutMe from "../components/AboutMe.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<Layout title={t("site.title")} description={t("site.description")}>
  <main class="px-4">
    <SectionContainer
      id={t("header.navbar.homeLink")}
      class="pt-24 pb-16 sm:py-28 flex flex-col sm:flex-row items-center gap-5"
    >
      <Hero />
    </SectionContainer>

    <SectionContainer id={t("header.navbar.experienceLink")}>
      <Title>
        <BriefcaseIcon class="size-6" />
        {t("experience.title")}
      </Title>
      <Experience />
    </SectionContainer>

    <SectionContainer id={t("header.navbar.projectsLink")}>
      <Title>
        <CodeIcon class="size-6" />
        {t("projects.title")}
      </Title>
      <Projects />
    </SectionContainer>

    <SectionContainer id={t("header.navbar.certificationsLink")}>
      <Title>
        <CertificateIcon class="size-6" />
        {t("certifications.title")}
      </Title>
      <Certificates />
    </SectionContainer>

    <SectionContainer id={t("header.navbar.aboutMeLink")}>
      <Title>
        <MeIcon class="size-6" />
        {t("aboutMe.title")}
      </Title>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
