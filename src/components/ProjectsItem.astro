---
import SocialPill from './SocialPill.astro';
interface Icon {
    icon: string,
    name: string
}
interface Props {
  img: string;
  title: string;
  description: string;
  pills: Icon[];
  codeUrl?: string;
  previewUrl?: string;
}
const { img, title, description, pills, codeUrl, previewUrl } = Astro.props;
---

<article class="flex gap-x-8">
    <img src={img} alt={title} class="w-1/2 h-[200px] rounded-lg">
    <div class="w-1/2">
        <h3 class="text-3xl font-bold mb-2">{title}</h3>
        <p class="text-base font-normal opacity-80 max-w-[500px] text-pretty mb-2">{description}</p>

        <ol class="flex gap-3 flex-wrap mb-2">
            {pills.map( pill => (
                <li>
                    <SocialPill>
                        {pill.icon} {pill.name}
                    </SocialPill>
                </li>
            ))}
        </ol>

        <div>
            <a href={codeUrl} class="inline-block border rounded-lg px-2 py-1 bg-white text-black font-semibold">Ver c√≥digo</a>
            <a href={previewUrl} class="inline-block border rounded-lg px-2 py-1 bg-white text-black font-semibold">Ir al sitio</a>
        </div>
        
    </div>
</article>
