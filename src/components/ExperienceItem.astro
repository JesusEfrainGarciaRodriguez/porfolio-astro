---
import Button from "../components/Button.astro";
interface Props {
  date: string;
  company: string;
  title: string;
  description: string;
  link?: string;
}
const { date, company, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-blue-900 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400">{date}</time>
<h4 class="text-base sm:text-lg font-semibold text-pretty">{company}</h4>
<h3 class="text-lg sm:text-xl font-bold text-[#ffc300]/90 text-wrap">
  {title}
</h3>
<p
  class="mb-4 text-sm sm:text-base font-normal text-white text-balance max-w-[700px] opacity-80"
>
  {description}
</p>
{
  link && (
    <Button>
      Learn more{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </Button>
  )
}
