---
interface Props {
  date: string;
  company: string;
  title: string;
  description: string;
}
const { date, company, title, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-blue-900 rounded-full mt-1.5 -start-1.5 border border-black dark:border-white"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400">{date}</time>
<p class="text-base sm:text-lg font-semibold text-pretty text-black dark:text-white">{company}</p>
<h3 class="text-lg sm:text-xl font-bold text-[#ffc300]/90 text-wrap">
  {title}
</h3>
<p
  class="mb-4 text-sm sm:text-base font-normal text-black dark:text-white text-balance max-w-[700px] opacity-90 dark:opacity-80"
>
  {description}
</p>
