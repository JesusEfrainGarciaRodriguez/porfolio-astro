---
const { variant, class: classProp, href } = Astro.props;
let classVariant =
  "inline-block rounded-lg px-2 py-1 text-white hover:text-black dark:text-black dark:hover:text-white bg-black dark:bg-white border-2 border-black dark:border-white font-semibold transition hover:bg-light-primary dark:hover:bg-dark-primary cursor-pointer";

if (variant === "secondary") {
  classVariant =
    "inline-block rounded-lg px-2 py-1 font-semibold text-black dark:text-white border-2 border-black dark:border-white bg-white bg-pattern dark:bg-none dark:bg-dark transition hover:border-light-primary dark:hover:border-dark-primary hover:text-light-primary dark:hover:text-dark-primary cursor-pointer";
}
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`${classVariant} ${classProp}`}><slot /></a
>
