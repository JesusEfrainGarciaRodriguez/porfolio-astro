---
const { variant, class: classProp, href } = Astro.props;
let classVariant =
  "inline-block rounded-lg px-2 py-1 bg-white border-2 text-black font-semibold transition hover:bg-[#ffc300]/90 hover:text-white cursor-pointer";

if (variant === "secondary") {
  classVariant =
    "inline-block rounded-lg px-2 py-1 border-2 border-white bg-[#000814] transition hover:border-[#ffc300]/90 hover:text-[#ffc300]/90 cursor-pointer";
}
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`${classVariant} ${classProp}`}><slot /></a
>
